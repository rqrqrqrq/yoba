{
  "name": "yoba",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/rqrqrqrq/yoba.git",
  "author": "rqrqrqrq <rtdfh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma all --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    }
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.5.1",
    "husky": "^0.13.3",
    "jest": "^20.0.4",
    "lint-staged": "^3.5.0",
    "prettier": "^1.3.1"
  }
}
